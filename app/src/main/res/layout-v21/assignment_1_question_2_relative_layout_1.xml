<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<ImageView
		android:layout_height="200sp"
		android:layout_width="fill_parent"
		android:src="@drawable/login_screen_plant"
		android:gravity="center"
		android:contentDescription="@string/login_screen_plant"
		android:layout_centerHorizontal="true"
		android:id="@+id/plant" />
	<RelativeLayout
		android:layout_below="@+id/plant"
		android:layout_height="fill_parent"
		android:layout_marginTop="25sp"
		android:layout_width="fill_parent"
		android:background="@drawable/transparent_rounded_corners">
		<EditText
			android:layout_width="300sp"
			android:layout_height="48sp"
			android:layout_centerHorizontal="true"
			android:drawableStart="@drawable/ic_baseline_person_outline_24"
			android:layout_marginTop="75sp"
			android:textColor="@color/white"
			android:backgroundTint="@color/white"
			android:inputType="text"
			android:hint="@string/username"
			android:textColorHint="@color/white"
			android:drawablePadding="10sp"
			android:autofillHints="@null"
			android:id="@+id/username_field"
			/>
		<EditText
			android:layout_width="300sp"
			android:layout_height="48sp"
			android:layout_centerHorizontal="true"
			android:drawableStart="@drawable/ic_baseline_lock_24"
			android:layout_marginTop="10sp"
			android:textColor="@color/white"
			android:backgroundTint="@color/white"
			android:inputType="textPassword"
			android:hint="@string/password"
			android:textColorHint="@color/white"
			android:drawablePadding="10sp"
			android:autofillHints="@null"
			android:layout_below="@id/username_field"
			android:id="@+id/password_field"
			/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignEnd="@id/password_field"
			android:layout_marginTop="15sp"
			android:text="@string/forget_password"
			android:textColor="@color/white"
			android:layout_below="@id/password_field"
			android:id="@+id/forget_password"
			/>
		<Button
			android:layout_width="300sp"
			android:layout_height="48sp"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="50sp"
			android:text="@string/sign_in"
			android:textAllCaps="false"
			android:background="@drawable/less_rounded_corners"
			android:backgroundTint="@color/white"
			android:layout_below="@id/forget_password"
			android:id="@+id/sign_in_button"
			/>
		<RelativeLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="30sp"
			android:layout_below="@id/sign_in_button">
			<TextView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="@string/new_user"
				android:textColor="@color/white"
				android:id="@+id/new_user"/>
			<TextView
				android:layout_toEndOf="@id/new_user"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="@string/sign_up"
				android:layout_marginStart="8sp"
				android:textColor="@color/white"
				android:textStyle="bold"
				/>
		</RelativeLayout>
	</RelativeLayout>
</RelativeLayout>