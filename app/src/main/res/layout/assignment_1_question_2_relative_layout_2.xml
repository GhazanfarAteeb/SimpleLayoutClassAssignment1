<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<RelativeLayout
		android:layout_alignParentStart="true"
		android:id="@+id/top_bar"
		android:layout_width="match_parent"
		android:layout_height="50sp">
		<RelativeLayout
			android:id="@+id/menu"
			android:layout_width="50sp"
			android:layout_height="50sp"
			android:orientation="vertical"
			android:layout_centerVertical="true">
			<Button
				android:layout_centerVertical="true"
				android:layout_width="25sp"
				android:layout_height="25sp"
				android:layout_marginStart="20sp"
				android:background="@drawable/ic_baseline_menu_24" />
		</RelativeLayout>
		<RelativeLayout
			android:id="@+id/cart"
			android:layout_alignParentEnd="true"
			android:layout_width="50sp"
			android:layout_height="50sp"
			>
			<Button
				android:layout_centerVertical="true"
				android:layout_width="25sp"
				android:layout_height="25sp"
				android:layout_marginEnd="20sp"
				android:background="@drawable/ic_baseline_shopping_cart_24" />
		</RelativeLayout>
	</RelativeLayout>
	<TextView
		android:layout_below="@id/top_bar"
		android:layout_marginTop="10sp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/what_kind_of_plant_you_want"
		android:layout_marginStart="20sp"
		android:layout_marginEnd="20sp"
		android:textSize="20sp"
		android:textStyle="bold"
		android:fontFamily="sans-serif"
		android:textColor="@color/black"
		android:id="@+id/textview"/>
	<EditText
		android:layout_width="match_parent"
		android:layout_height="48sp"
		android:layout_marginTop="10sp"
		android:layout_marginStart="20sp"
		android:layout_marginEnd="20sp"
		android:autofillHints="@null"
		android:background="@drawable/search_bar"
		android:drawableStart="@drawable/ic_baseline_search_24"
		android:drawableEnd="@drawable/ic_baseline_mic_24"
		android:drawablePadding="12sp"
		android:hint="@string/search"
		android:inputType="text"
		android:paddingStart="10sp"
		android:paddingEnd="10sp"
		android:layout_below="@id/textview"
		android:id="@+id/search_bar"/>
	<RelativeLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:layout_gravity="center"
		android:layout_below="@id/search_bar"
		android:id="@+id/navigation_bar">
		<Button
			android:textAllCaps="false"
			android:layout_height="wrap_content"
			android:layout_width="80sp"
			android:layout_margin="10sp"
			android:text="@string/all"
			style="?android:attr/buttonBarButtonStyle"
			android:textColor="@color/black"
			android:id="@+id/button1"
			android:layout_alignParentStart="true"/>
		<Button
			style="?android:attr/buttonBarButtonStyle"
			android:layout_width="80sp"
			android:layout_height="wrap_content"
			android:layout_margin="10sp"
			android:text="@string/small"
			android:textAllCaps="false"
			android:textColor="#329F5F"
			android:id="@+id/button2"
			android:layout_toEndOf="@+id/button1"
			/>
		<Button
			android:textAllCaps="false"
			android:layout_height="wrap_content"
			android:layout_width="80sp"
			android:layout_margin="10sp"
			style="?android:attr/buttonBarButtonStyle"
			android:text="@string/medium"
			android:textColor="@color/black"
			android:id="@+id/button3"
			android:layout_toEndOf="@+id/button2"/>
		<Button
			android:textAllCaps="false"
			android:layout_height="wrap_content"
			android:layout_width="80sp"
			android:layout_margin="10sp"
			android:text="@string/hanging"
			style="?android:attr/buttonBarButtonStyle"
			android:textColor="@color/black"
			android:id="@+id/button4"
			android:layout_toEndOf="@+id/button3"/>
	</RelativeLayout>
	<!--cardViews Lines-->
	<RelativeLayout
		android:layout_below="@id/navigation_bar"
		android:layout_centerHorizontal="true"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">
		<!-- card view per line-->
		<RelativeLayout
			android:id="@+id/first_row"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<!-- card view -->
			<RelativeLayout
				android:id="@+id/first_half"
				android:layout_marginStart="20sp"
				android:layout_width="175sp"
				android:layout_height="190sp"
				android:background="@drawable/item_card_view"
				android:orientation="vertical">
				<TextView
					android:id="@+id/first_quadrant_text_view"
					android:layout_marginStart="20sp"
					android:layout_marginEnd="20sp"
					android:layout_marginTop="10sp"
					android:textStyle="bold"
					android:textColor="@color/white"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="@string/indoor"
					app:drawableEndCompat="@drawable/ic_baseline_wishlist_24" />
				<ImageView
					android:layout_below="@id/first_quadrant_text_view"
					android:layout_centerHorizontal="true"
					android:layout_width="150sp"
					android:layout_height="100sp"
					android:src="@drawable/plant1"
					android:contentDescription="@string/plant1"
					android:id="@+id/first_quadrant_image_view"/>
				<RelativeLayout
					android:layout_below="@id/first_quadrant_image_view"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:layout_marginTop="5sp"
					android:layout_marginStart="20sp"
					android:layout_marginEnd="20sp"
					android:baselineAligned="false">
					<RelativeLayout
						android:layout_height="40sp"
						android:layout_width="match_parent"
						android:orientation="vertical">
						<TextView
							android:id="@+id/first_quadrant_text_name"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/plant_1"
							android:textSize="15sp"
							android:textColor="@color/white"
							android:textStyle="bold"/>
						<TextView
							android:layout_below="@id/first_quadrant_text_name"
							android:id="@+id/first_quadrant_text_price"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="@color/white"
							android:textSize="13sp"
							android:text="@string/from_15"/>
					</RelativeLayout>
					<RelativeLayout
						android:layout_width="35sp"
						android:layout_height="35sp"
						android:layout_alignParentEnd="true"
						android:background="@drawable/transparency_effect_with_rounded_corners">
						<Button
							android:layout_centerHorizontal="true"
							android:layout_centerVertical="true"
							android:layout_width="25sp"
							android:layout_height="25sp"
							android:background="@drawable/ic_baseline_add_24" />
					</RelativeLayout>
				</RelativeLayout>
			</RelativeLayout>
			<!-- card view -->
			<RelativeLayout
				android:layout_toEndOf="@id/first_half"
				android:id="@+id/second_half"
				android:layout_marginStart="20sp"
				android:layout_width="175sp"
				android:layout_height="190sp"
				android:background="@drawable/item_card_view"
				android:orientation="vertical">
				<TextView
					android:id="@+id/second_quadrant_text_view"
					android:layout_marginStart="20sp"
					android:layout_marginEnd="20sp"
					android:layout_marginTop="10sp"
					android:textStyle="bold"
					android:textColor="@color/white"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="@string/indoor"
					app:drawableEndCompat="@drawable/ic_baseline_wishlist_24" />
				<ImageView
					android:layout_below="@id/second_quadrant_text_view"
					android:layout_centerHorizontal="true"
					android:layout_width="150sp"
					android:layout_height="100sp"
					android:src="@drawable/plant1"
					android:contentDescription="@string/plant1"
					android:id="@+id/second_quadrant_image_view"/>
				<RelativeLayout
					android:layout_below="@id/second_quadrant_image_view"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:layout_marginTop="5sp"
					android:layout_marginStart="20sp"
					android:layout_marginEnd="20sp"
					android:baselineAligned="false">
					<RelativeLayout
						android:layout_height="40sp"
						android:layout_width="match_parent"
						android:orientation="vertical">
						<TextView
							android:id="@+id/second_quadrant_text_name"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/plant_1"
							android:textSize="15sp"
							android:textColor="@color/white"
							android:textStyle="bold"/>
						<TextView
							android:layout_below="@id/second_quadrant_text_name"
							android:id="@+id/second_quadrant_text_price"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="@color/white"
							android:textSize="13sp"
							android:text="@string/from_15"/>
					</RelativeLayout>
					<RelativeLayout
						android:layout_width="35sp"
						android:layout_height="35sp"
						android:layout_alignParentEnd="true"
						android:background="@drawable/transparency_effect_with_rounded_corners">
						<Button
							android:layout_centerHorizontal="true"
							android:layout_centerVertical="true"
							android:layout_width="25sp"
							android:layout_height="25sp"
							android:background="@drawable/ic_baseline_add_24" />
					</RelativeLayout>
				</RelativeLayout>
			</RelativeLayout>
		</RelativeLayout>
		<!-- card view per line-->
		<RelativeLayout
			android:layout_marginTop="20sp"
			android:layout_below="@id/first_row"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<!-- card view -->
			<RelativeLayout
				android:id="@+id/third_half"
				android:layout_marginStart="20sp"
				android:layout_width="175sp"
				android:layout_height="190sp"
				android:background="@drawable/item_card_view"
				android:orientation="vertical">
				<TextView
					android:id="@+id/third_quadrant_text_view"
					android:layout_marginStart="20sp"
					android:layout_marginEnd="20sp"
					android:layout_marginTop="10sp"
					android:textStyle="bold"
					android:textColor="@color/white"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="@string/indoor"
					app:drawableEndCompat="@drawable/ic_baseline_wishlist_24" />
				<ImageView
					android:layout_below="@id/third_quadrant_text_view"
					android:layout_centerHorizontal="true"
					android:layout_width="150sp"
					android:layout_height="100sp"
					android:src="@drawable/plant1"
					android:contentDescription="@string/plant1"
					android:id="@+id/third_quadrant_image_view"/>
				<RelativeLayout
					android:layout_below="@id/third_quadrant_image_view"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:layout_marginTop="5sp"
					android:layout_marginStart="20sp"
					android:layout_marginEnd="20sp"
					android:baselineAligned="false">
					<RelativeLayout
						android:layout_height="40sp"
						android:layout_width="match_parent"
						android:orientation="vertical">
						<TextView
							android:id="@+id/third_quadrant_text_name"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/plant_1"
							android:textSize="15sp"
							android:textColor="@color/white"
							android:textStyle="bold"/>
						<TextView
							android:layout_below="@id/third_quadrant_text_name"
							android:id="@+id/third_quadrant_text_price"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="@color/white"
							android:textSize="13sp"
							android:text="@string/from_15"/>
					</RelativeLayout>
					<RelativeLayout
						android:layout_width="35sp"
						android:layout_height="35sp"
						android:layout_alignParentEnd="true"
						android:background="@drawable/transparency_effect_with_rounded_corners">
						<Button
							android:layout_centerHorizontal="true"
							android:layout_centerVertical="true"
							android:layout_width="25sp"
							android:layout_height="25sp"
							android:background="@drawable/ic_baseline_add_24" />
					</RelativeLayout>
				</RelativeLayout>
			</RelativeLayout>
			<!-- card view -->
			<RelativeLayout
				android:layout_toEndOf="@id/third_half"
				android:id="@+id/fourth_half"
				android:layout_marginStart="20sp"
				android:layout_width="175sp"
				android:layout_height="190sp"
				android:background="@drawable/item_card_view"
				android:orientation="vertical">
				<TextView
					android:id="@+id/fourth_quadrant_text_view"
					android:layout_marginStart="20sp"
					android:layout_marginEnd="20sp"
					android:layout_marginTop="10sp"
					android:textStyle="bold"
					android:textColor="@color/white"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="@string/indoor"
					app:drawableEndCompat="@drawable/ic_baseline_wishlist_24" />
				<ImageView
					android:layout_below="@id/fourth_quadrant_text_view"
					android:layout_centerHorizontal="true"
					android:layout_width="150sp"
					android:layout_height="100sp"
					android:src="@drawable/plant1"
					android:contentDescription="@string/plant1"
					android:id="@+id/fourth_quadrant_image_view"/>
				<RelativeLayout
					android:layout_below="@id/fourth_quadrant_image_view"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:layout_marginTop="5sp"
					android:layout_marginStart="20sp"
					android:layout_marginEnd="20sp"
					android:baselineAligned="false">
					<RelativeLayout
						android:layout_height="40sp"
						android:layout_width="match_parent"
						android:orientation="vertical">
						<TextView
							android:id="@+id/fourth_quadrant_text_name"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/plant_1"
							android:textSize="15sp"
							android:textColor="@color/white"
							android:textStyle="bold"/>
						<TextView
							android:layout_below="@id/fourth_quadrant_text_name"
							android:id="@+id/fourth_quadrant_text_price"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="@color/white"
							android:textSize="13sp"
							android:text="@string/from_15"/>
					</RelativeLayout>
					<RelativeLayout
						android:layout_width="35sp"
						android:layout_height="35sp"
						android:layout_alignParentEnd="true"
						android:background="@drawable/transparency_effect_with_rounded_corners">
						<Button
							android:layout_centerHorizontal="true"
							android:layout_centerVertical="true"
							android:layout_width="25sp"
							android:layout_height="25sp"
							android:background="@drawable/ic_baseline_add_24" />
					</RelativeLayout>
				</RelativeLayout>
			</RelativeLayout>
		</RelativeLayout>
	</RelativeLayout>
</RelativeLayout>